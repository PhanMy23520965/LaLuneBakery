<!DOCTYPE html>
<html>
<head>
    <title>Quản lý Sản phẩm - La Lune Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body class="bg-light">
    <div class="container mt-5 mb-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 style="color: #D4A5A5;">Quản Lý Sản Phẩm</h2>
            <div>
                <a href="/" class="btn btn-outline-secondary me-2">
                    <i class="fas fa-home"></i> Trang Chủ
                </a>
                <a href="/admin/add" class="btn btn-success" style="background-color: #D4A5A5; border: none;">
                    <i class="fas fa-plus"></i> Thêm Bánh Mới
                </a>
            </div>
        </div>

        <div class="card shadow-sm border-0">
            <div class="card-body p-0">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th scope="col" class="ps-4">Hình ảnh</th>
                            <th scope="col">Tên bánh</th>
                            <th scope="col">Giá tiền</th>
                            <th scope="col">Xuất xứ</th>
                            <th scope="col" class="text-end pe-4">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if(products.length === 0) { %>
                            <tr>
                                <td colspan="5" class="text-center py-4">Chưa có sản phẩm nào.</td>
                            </tr>
                        <% } %>

                        <% products.forEach(product => { %>
                        <tr>
                            <td class="ps-4">
                                <img src="<%= product.image %>" class="rounded" width="60" height="60" style="object-fit: cover;" onerror="this.src='https://placehold.co/60x60?text=No+Image'">
                            </td>
                            <td class="fw-bold"><%= product.name %></td>
                            <td class="text-danger"><%= product.price.toLocaleString('vi-VN') %>đ</td>
                            <td><span class="badge bg-light text-dark border"><%= product.origin %></span></td>
                            <td class="text-end pe-4">
                                <a href="/admin/edit/<%= product._id %>" class="btn btn-sm btn-primary me-1">
                                    <i class="fas fa-edit"></i> Sửa
                                </a>
                                
                                <form action="/admin/delete/<%= product._id %>" method="POST" class="d-inline" onsubmit="return confirm('Bạn có chắc chắn muốn xóa bánh <%= product.name %> không?');">
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        <i class="fas fa-trash"></i> Xóa
                                    </button>
                                </form>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>